<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recipe_step_item_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/recipe_step_item_textview"
            style="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/recipe_step_item_textview_paddingStart"
            android:paddingEnd="@dimen/recipe_step_item_textview_paddingEnd"
            android:paddingTop="@dimen/recipe_step_item_textview_paddingTop"
            android:paddingBottom="@dimen/recipe_step_item_textview_paddingBottom"
            android:textSize="@dimen/recipe_step_item_textview_textSize"/>

</android.support.constraint.ConstraintLayout>